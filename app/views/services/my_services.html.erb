
<h1>My Services Dashboard</h1>

<%= link_to "List New Service", new_service_path, class: "btn btn-dark mb-3" %>

<div class="cards">
  <% @services.each do |service| %>
    <div class="col">
      <div class="card">
        <img src="<%= service.image %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= service.title %></h5>
          <p class="card-text"><%= service.description %></p>
          <p class="card-text"><strong>Duration:</strong> <%= service.duration %> minutes</p>
          <p class="card-text"><strong>Price:</strong> Â£<%= service.price %></p>

          <%= link_to "Edit", edit_service_path(service), class: "btn btn-dark" %>


          <% if service.user == current_user %>
            <%= link_to "Remove", service_path(service), method: :delete, data: { confirm: "Are you sure you want to delete this service?" }, class: "btn-cancel" %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
