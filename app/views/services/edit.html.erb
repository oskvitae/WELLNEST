<h1>Edit Service</h1>

<%= simple_form_for @service, url: service_path(@service), method: :patch, html: { class: "form-horizontal" } do |f| %>
  <%= f.input :title, label: "Title" %>
  <%= f.input :description, as: :text, label: "Description" %>
  <%= f.input :category, label: "Category" %>
  <%= f.input :duration, as: :integer, label: "Duration (minutes)" %>
  <%= f.input :price, as: :decimal, label: "Price (Â£)" %>
  <%= f.input :date, as: :date, label: "Date", html5: true %>
  <%= f.input :time, as: :time, label: "Time", html5: true %>
  <%= f.input :class_size, label: "Class Size" %>
  <%= f.input :address, label: "Address" %>
  <%= f.input :image, label: "Image URL" %>

  <%= f.button :submit, "Update Service", class: "btn btn-dark" %>
<% end %>
